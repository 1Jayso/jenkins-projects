pipeline {
  agent{
    docker { image '1joe/docker-ansible:latest' }
  } 
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('private-key'),
   SSH_KEY=credentials('ssh-key')
  }
  stages {
    stage('Install Maria DB') {
      steps {
        sh 'ansible-galaxy collection install -r requirements.yml'
        sh 'ansible-playbook -i ./inventory/inventory.txt --private-key=$ANSIBLE_PRIVATE_KEY ansible-playbooks/mariadb.yml'
      }
    }
  }
}