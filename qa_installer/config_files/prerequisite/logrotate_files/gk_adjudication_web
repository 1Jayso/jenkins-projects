/home/logFiles/adjudication_web/* {
firstaction
        logsLocation=/home/logFiles/adjudication_web
        date=$(date "+%Y-%m-%d")

        mkdir -p ${logsLocation}/.tmp
        mkdir -p ${logsLocation}/archive/${date}
endscript
olddir /home/logFiles/adjudication_web/.tmp
missingok
notifempty
copytruncate
dateext
dateformat -%Y-%m-%d
lastaction
        logsLocation=/home/logFiles/adjudication_web
        date=$(date "+%Y-%m-%d")

        mv ${logsLocation}/.tmp/* ${logsLocation}/archive/$date/

        /usr/local/bin/gk_trim_archive_folders -d ${logsLocation}/archive/ -n 3

        dateTime=$(date "+%Y-%m-%d %H:%M:%S")
        echo "${dateTime} logs rotated successfully" >> ${logsLocation}/archive/rotation_logs.txt
endscript
}
