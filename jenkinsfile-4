pipeline {
  agent {
    docker {
      image 'node:12'
    }
  }
  stages {
    stage('Build') {
      steps {
        sh 'npm install'
        sh 'npm run build'
      }
    }
    stage('Build Docker Image') {
      steps {
         script {
          docker.build("ansible", "ansible")
        }
            sh '''
                ansible --version
                ansible-playbook --version
                ansible-galaxy --version
                '''
      }
    }
  }
}






